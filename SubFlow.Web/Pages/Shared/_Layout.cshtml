@using Microsoft.Extensions.Localization
@using SubFlow.Web.Localization
@inject IStringLocalizer<SharedResource> L

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @L["AppTitle"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SubFlow.Web.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="sf-header">
        <nav class="navbar navbar-expand-lg sf-navbar">
            <div class="container">
                <a class="navbar-brand sf-brand" asp-page="/Index">@L["AppTitle"]</a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#sfNav"
                        aria-controls="sfNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="sfNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-1">
                        <li class="nav-item">
                            <a class="nav-link sf-navlink" asp-page="/Index">@L["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sf-navlink" asp-page="/Privacy">@L["Privacy"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sf-navlink" asp-page="/Subscriptions/Index">@L["Subscriptions"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sf-navlink" asp-page="/Services/Index">@L["Services"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sf-navlink" asp-page="/Calendar/Index">@L["Calendar"]</a>
                        </li>

                        <li class="nav-item ms-lg-2">
                            <button id="themeToggle"
                                    type="button"
                                    class="sf-theme-toggle"
                                    aria-label="Toggle theme"
                                    title="Toggle theme">
                                <span id="themeIcon" aria-hidden="true">🌙</span>
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container sf-container py-4">
            @RenderBody()
        </div>
    </main>

    <footer class="sf-footer mt-auto">
        <div class="container d-flex justify-content-between align-items-center gap-3">
            <div class="sf-footer-left">
                &copy; 2026 — @L["AppTitle"]
            </div>
            <div class="sf-footer-right">
                <a class="sf-footer-link" asp-page="/Privacy">@L["Privacy"]</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
