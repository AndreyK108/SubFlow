{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SubFlow.Web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "SubFlow.Web/",
                "--configuration",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "watch SubFlow.Web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "SubFlow.Web",
                "--no-launch-profile"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$msCompile",
            "isBackground": true
        }
    ]
}
